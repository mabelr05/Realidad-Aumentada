<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InicioActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp"
        tools:ignore="MissingConstraints"
        android:background="#661603"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text="SOLARIS"
            android:fontFamily="sans-serif-condensed-medium"
            android:textColor="#ffffff"
            android:textSize="25sp"
            tools:ignore="HardcodedText,TextContrastCheck" />

        <ImageView
                android:id="@+id/imageView"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:src="@drawable/sol"
                android:layout_marginTop="10dp"
                tools:ignore="ContentDescription" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/shape_layout"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="15dp">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Instrucciones"
                android:layout_marginTop="5dp"
                android:textColor="#ffffff"
                android:textSize="25dp"
                android:textStyle="bold"
                tools:ignore="HardcodedText,SpUsage" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="1. Descarga la imagen"
                android:textColor="#ffffff"
                android:textSize="18dp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-thin"
                tools:ignore="HardcodedText,SpUsage" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="2. Preciona el boton Descargar Imagen"
                android:fontFamily="sans-serif-thin"
                android:textColor="#ffffff"
                android:textSize="18dp"
                android:textStyle="bold"
                tools:ignore="HardcodedText,SpUsage" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="3. Preciona Iniciar "
                android:fontFamily="sans-serif-thin"
                android:textColor="#ffffff"
                android:textSize="18dp"
                android:textStyle="bold"
                tools:ignore="HardcodedText,SpUsage" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="4. Apunta la camara sobre la imagen, y comienza el juego"
                android:fontFamily="sans-serif-thin"
                android:textColor="#ffffff"
                android:textSize="18dp"
                android:textStyle="bold"
                tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry,SpUsage" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <Button
                    android:id="@+id/button1"
                    android:layout_width="300dp"
                    android:layout_height="48dp"
                    android:background="@drawable/shape_button"
                    android:text="Abrir Imagen"
                    android:textColor="#000000"
                    tools:ignore="HardcodedText" />

                <Button
                    android:id="@+id/btnStart"
                    android:layout_width="300dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/shape_button"
                    android:text="Iniciar"
                    android:textColor="#000000"
                    tools:ignore="HardcodedText" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>